---
import Navbar from "../components/Navbar.astro";
import ScrollUp from "../components/ScrollUp.astro";
import Footer from "../components/Footer.astro";

// Server-side theme detection (optional, for SSR/SSG)
const theme = Astro.cookies.get("theme")?.value || "system";
const isDark =
  theme === "dark" ||
  (theme === "system" &&
    Astro.request.headers.get("sec-ch-prefers-color-scheme") === "dark");
---

<!doctype html>
<html lang="en" class={isDark ? "dark" : ""}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Accept-CH" content="Sec-CH-Prefers-Color-Scheme" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/styles/globals.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>JP Grineau</title>

    <!-- Inline script to prevent flash -->
    <script>
      // Apply theme before rendering to prevent flash
      (function () {
        const theme = localStorage.getItem("theme") || "system";
        if (
          theme === "dark" ||
          (theme === "system" &&
            matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      })();
    </script>
  </head>
  <body class="p-0 m-0">
    <ScrollUp />
    <Navbar />
    <main class="p-8">
      <slot />
      <br />
      <Footer />
    </main>
  </body>
</html>
