---
import Layout from "../layouts/Layout.astro";

import { Image } from "astro:assets";
import NextLogo from "../assets/nextjs.png";
import TypescriptLogo from "../assets/typescript.png";
import AstroLogo from "../assets/astrologo.png";
import JavascriptLogo from "../assets/javascript.png";
import SanityLogo from "../assets/sanity.png";
import TailwindLogo from "../assets/tailwind.png";
import ReactLogo from "../assets/react.png";
import FirebaseLogo from "../assets/firebase.png";
import MySQLLogo from "../assets/mysql.png";
import ReduxLogo from "../assets/redux.png";
import HTMLLogo from "../assets/html.png";
import CSSLogo from "../assets/css.png";
import SVGLogo from "../assets/svg.png";

import "../styles/global.css";
---

<Layout>
  <div class="max-w-6xl mx-auto w-full">
    <div class="text-center">
      <h1 class="mt-5">Projects</h1>
    </div>
    <!-- Current Focus Section-->
    <div>
      <div class="max-w-4xl mx-auto p-4">
        <p class="mb-5 text-center text-lg italic">
          Projects that I have created or maintaining
        </p>
      </div>
      <span
        class="block mx-auto text-[5em] font-bold leading-[1em] text-transparent opacity-35 dark:opacity-20 pointer-events-none"
        style="-webkit-text-stroke: 1.5px #aaa;"
      >
        Current Focus
      </span>
      <!-- Current Focus project div -->
      <div class="flex flex-wrap justify-center gap-4 max-w-5xl mx-auto">
        <!-- Current Focus Card 1 -->
        <div
          class="flex flex-col justify-between w-72 p-5 rounded-lg bg-[var(--bg)] hover:bg-[rgba(170,170,170,0.10)] transition"
        >
          <div>
            <h3 class="text-lg font-semibold mb-2 text-[var(--link)]">
              Visual Timers
            </h3>
            <div class="flex-row gap-2 mb-2">
              <Image
                src={NextLogo}
                alt="Next.js Logo"
                title={"Next.js"}
                loading="eager"
                class="w-8 h-8 inline-block mr-2"
              />
              <Image
                src={TypescriptLogo}
                alt="TypeScript Logo"
                title={"TypeScript"}
                loading="eager"
                class="w-8 h-8 inline-block mr-2"
              />
              <Image
                src={TailwindLogo}
                alt="Tailwindcss Logo"
                title={"Tailwindcss"}
                loading="eager"
                class="w-8 h-8 inline-block mr-2"
              />
              <Image
                src={SVGLogo}
                alt="SVG Logo"
                title={"SVG"}
                loading="eager"
                class="w-8 h-8 inline-block mr-2"
              />
            </div>
            <p class="text-sm mb-2 opacity-50">
              A visual timer app that helps you manage your time effectively.
              Built with <span class="font-large">Next.js</span> and <span
                class="font-large">TypeScript</span
              >. It allows you to create, edit, and delete timers with ease.
              Stay focused and productive with Visual Timers!
            </p>
          </div>
          <div class="flex gap-2 mt-4">
            <a
              href="https://visualtimers.net/"
              target="_blank"
              class="flex-1 text-center px-3 py-2 rounded-md border text-[var(--text)] hover:opacity-80 transition hover:bg-[var(--link)]"
              >Live Demo</a
            >
            <a
              href="https://github.com/JGrineau/visual-timers"
              aria-label="Visual Timers GitHub Repository"
              target="_blank"
              class="px-3 py-2 rounded-md border border-[var(--link)] text-[var(--link)] hover:bg-[var(--link)] hover:text-[var(--bg)] transition"
            >
              <i class="bi bi-github"></i>
            </a>
          </div>
        </div>

        <!-- Current Focus Card 2 -->
        <div
          class="flex flex-col justify-between w-72 p-5 rounded-lg bg-[var(--bg)] hover:bg-[rgba(170,170,170,0.10)] transition"
        >
          <div>
            <h3 class="text-lg font-semibold mb-2 text-[var(--link)]">
              Personal Portfolio
            </h3>
            <div class="flex-row gap-2 mb-2">
              <Image
                src={AstroLogo}
                alt="Astro Logo"
                title={"Astro"}
                loading="eager"
                class="w-8 h-8 inline-block mr-2"
              />
              <Image
                src={JavascriptLogo}
                alt="JavaScript Logo"
                title={"JavaScript"}
                loading="eager"
                class="w-8 h-8 inline-block mr-2"
              />
              <Image
                src={TailwindLogo}
                alt="Tailwindcss Logo"
                title={"Tailwindcss"}
                loading="eager"
                class="w-8 h-8 inline-block mr-2"
              />
              <Image
                src={SanityLogo}
                alt="Sanity Logo"
                title={"Sanity"}
                loading="eager"
                class="w-8 h-8 inline-block mr-2"
              />
            </div>
            <p class="text-sm mb-2 opacity-50">
              Redesigned my personal portfolio using
              <span class="font-large">Astro</span> and <span class="font-large"
                >JavaScript</span
              >. Focused on performance and accessibility with a mobile-first
              approach and 100% SEO.
            </p>
          </div>
          <div class="flex gap-2 mt-4">
            <a
              href="https://jpgrineau.com/"
              target="_blank"
              class="flex-1 text-center px-3 py-2 rounded-md border text-[var(--text)] hover:opacity-80 transition hover:bg-[var(--link)]"
              >Live Demo</a
            >
            <a
              href="https://github.com/JGrineau/portfolio-app-2.0"
              aria-label="Visual Timers GitHub Repository"
              target="_blank"
              class="px-3 py-2 rounded-md border border-[var(--link)] text-[var(--link)] hover:bg-[var(--link)] hover:text-[var(--bg)] transition"
            >
              <i class="bi bi-github"></i>
            </a>
          </div>
        </div>
      </div>
      <!-- Web Apps section -->
      <div>
        <span
          class="block mx-auto text-[5em] font-bold leading-[1em] text-transparent opacity-35 dark:opacity-20 pointer-events-none"
          style="-webkit-text-stroke: 1.5px #aaa;"
        >
          Web Apps
        </span>

        <!-- Web App project div -->
        <div class="flex flex-wrap justify-center gap-4 max-w-5xl mx-auto">
          <!-- Web Apps Card 1-->
          <div
            class="flex flex-col justify-between w-72 p-5 rounded-lg bg-[var(--bg)] hover:bg-[rgba(170,170,170,0.10)] transition"
          >
            <div>
              <h3 class="text-lg font-semibold mb-2 text-[var(--link)]">
                Pokémon API App
              </h3>
              <div class="flex-row gap-2 mb-2">
                <Image
                  src={ReactLogo}
                  alt="React Logo"
                  title={"React"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={JavascriptLogo}
                  alt="JavaScript Logo"
                  title={"JavaScript"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={FirebaseLogo}
                  alt="Firebase Logo"
                  title={"Firebase"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={ReduxLogo}
                  alt="Redux Logo"
                  title={"Redux"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
              </div>
              <p class="text-sm mb-2 opacity-50">
                Designed a Pokémon API app using
                <span class="font-large">React</span> and <span
                  class="font-large">JavaScript</span
                >. The app fetches data from the Pokémon API, allowing users to
                explore various Pokémon, their abilities, and stats.
              </p>
            </div>
            <div class="flex gap-2 mt-4">
              <a
                href="https://pokemonjpg.netlify.app/"
                target="_blank"
                class="flex-1 text-center px-3 py-2 rounded-md border text-[var(--text)] hover:opacity-80 transition hover:bg-[var(--link)]"
                >Live Demo</a
              >
              <a
                href="https://github.com/JGrineau/pokemon-api"
                aria-label="Pokémon API App GitHub Repository"
                target="_blank"
                class="px-3 py-2 rounded-md border border-[var(--link)] text-[var(--link)] hover:bg-[var(--link)] hover:text-[var(--bg)] transition"
              >
                <i class="bi bi-github"></i>
              </a>
            </div>
          </div>

          <!-- Web Apps Card 2-->

          <div
            class="flex flex-col justify-between w-72 p-5 rounded-lg bg-[var(--bg)] hover:bg-[rgba(170,170,170,0.10)] transition"
          >
            <div>
              <h3 class="text-lg font-semibold mb-2 text-[var(--link)]">
                Todo App
              </h3>
              <div class="flex-row gap-2 mb-2">
                <Image
                  src={ReactLogo}
                  alt="React Logo"
                  title={"React"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={JavascriptLogo}
                  alt="JavaScript Logo"
                  title={"JavaScript"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={CSSLogo}
                  alt="CSS Logo"
                  title={"CSS"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={HTMLLogo}
                  alt="HTML Logo"
                  title={"HTML"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
              </div>
              <p class="text-sm mb-2 opacity-50">
                Made a Todo App using
                <span class="font-large">React</span> and <span
                  class="font-large">JavaScript</span
                >. The app allows users to add, edit, and delete tasks, helping
                them stay organized and manage their daily activities
                efficiently.
              </p>
            </div>
            <div class="flex gap-2 mt-4">
              <a
                href="https://todo-app-jp-grineau.netlify.app/"
                target="_blank"
                class="flex-1 text-center px-3 py-2 rounded-md border text-[var(--text)] hover:opacity-80 transition hover:bg-[var(--link)]"
                >Live Demo</a
              >
              <a
                href="https://github.com/JGrineau/todo-app"
                aria-label="Todo App GitHub Repository"
                target="_blank"
                class="px-3 py-2 rounded-md border border-[var(--link)] text-[var(--link)] hover:bg-[var(--link)] hover:text-[var(--bg)] transition"
              >
                <i class="bi bi-github"></i>
              </a>
            </div>
          </div>

          <!-- Web Apps Card 3-->

          <div
            class="flex flex-col justify-between w-72 p-5 rounded-lg bg-[var(--bg)] hover:bg-[rgba(170,170,170,0.10)] transition"
          >
            <div>
              <h3 class="text-lg font-semibold mb-2 text-[var(--link)]">
                Social Media App
              </h3>
              <div class="flex-row gap-2 mb-2">
                <Image
                  src={ReactLogo}
                  alt="React Logo"
                  title={"React"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={JavascriptLogo}
                  alt="JavaScript Logo"
                  title={"JavaScript"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={HTMLLogo}
                  alt="HTML Logo"
                  title={"HTML"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={CSSLogo}
                  alt="CSS Logo"
                  title={"CSS"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={FirebaseLogo}
                  alt="Firebase Logo"
                  title={"Firebase"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
              </div>
              <p class="text-sm mb-2 opacity-50">
                Developed a social media application using
                <span class="font-large">React</span> and <span
                  class="font-large">JavaScript</span
                >. The app allows users to create profiles, post updates, and
                interact with other users through likes and comments.
              </p>
            </div>
            <div class="flex gap-2 mt-4">
              <a
                href="https://jpgrineau.com/"
                target="_blank"
                class="flex-1 text-center px-3 py-2 rounded-md border text-[var(--text)] hover:opacity-80 transition hover:bg-[var(--link)]"
                >Live Demo</a
              >
              <a
                href="https://github.com/JGrineau/social-media-app"
                aria-label="Social Media App GitHub Repository"
                target="_blank"
                class="px-3 py-2 rounded-md border border-[var(--link)] text-[var(--link)] hover:bg-[var(--link)] hover:text-[var(--bg)] transition"
              >
                <i class="bi bi-github"></i>
              </a>
            </div>
          </div>

          <!-- Web Apps Card 4-->

          <div
            class="flex flex-col justify-between w-72 p-5 rounded-lg bg-[var(--bg)] hover:bg-[rgba(170,170,170,0.10)] transition"
          >
            <div>
              <h3 class="text-lg font-semibold mb-2 text-[var(--link)]">
                Form Validator
              </h3>
              <div class="flex-row gap-2 mb-2">
                <Image
                  src={ReactLogo}
                  alt="React Logo"
                  title={"React"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={JavascriptLogo}
                  alt="JavaScript Logo"
                  title={"JavaScript"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={HTMLLogo}
                  alt="HTML Logo"
                  title={"HTML"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={CSSLogo}
                  alt="CSS Logo"
                  title={"CSS"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
              </div>
              <p class="text-sm mb-2 opacity-50">
                Developed a form validation tool using
                <span class="font-large">React</span> and <span
                  class="font-large">JavaScript</span
                >. The app provides real-time validation for user inputs,
                ensuring data integrity and enhancing user experience.
              </p>
            </div>
            <div class="flex gap-2 mt-4">
              <a
                href="https://signupformvalidation.netlify.app/"
                target="_blank"
                class="flex-1 text-center px-3 py-2 rounded-md border text-[var(--text)] hover:opacity-80 transition hover:bg-[var(--link)]"
                >Live Demo</a
              >
              <a
                href="https://github.com/JGrineau/Form-Validation"
                aria-label="Form Validator GitHub Repository"
                target="_blank"
                class="px-3 py-2 rounded-md border border-[var(--link)] text-[var(--link)] hover:bg-[var(--link)] hover:text-[var(--bg)] transition"
              >
                <i class="bi bi-github"></i>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- UI/Frontend section -->
      <div>
        <span
          class="block mx-auto text-[5em] font-bold leading-[1em] text-transparent opacity-35 dark:opacity-20 pointer-events-none"
          style="-webkit-text-stroke: 1.5px #aaa;"
        >
          UI / Frontend
        </span>

        <!-- Frontend project div -->
        <div class="flex flex-wrap justify-center gap-4 max-w-5xl mx-auto">
          <!-- Frontend Card 1-->

          <div
            class="flex flex-col justify-between w-72 p-5 rounded-lg bg-[var(--bg)] hover:bg-[rgba(170,170,170,0.10)] transition"
          >
            <div>
              <h3 class="text-lg font-semibold mb-2 text-[var(--link)]">
                Product List With Cart
              </h3>
              <div class="flex-row gap-2 mb-2">
                <Image
                  src={JavascriptLogo}
                  alt="JavaScript Logo"
                  title={"JavaScript"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={HTMLLogo}
                  alt="HTML Logo"
                  title={"HTML"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={CSSLogo}
                  alt="CSS Logo"
                  title={"CSS"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
              </div>
              <p class="text-sm mb-2 opacity-50">
                Completed a product list with cart functionality using
                <span class="font-large">Vanilla JavaScript</span>
                . The app allows users to view products, add them to the cart, and
                manage their selections. It showcases my skills in building interactive
                web applications with a focus on user experience and functionality.
              </p>
            </div>
            <div class="flex gap-2 mt-4">
              <a
                href="https://product-list-cart-main.netlify.app/"
                target="_blank"
                class="flex-1 text-center px-3 py-2 rounded-md border text-[var(--text)] hover:opacity-80 transition hover:bg-[var(--link)]"
                >Live Demo</a
              >
              <a
                href="https://github.com/JGrineau/product-list-cart-main"
                aria-label="Product List With Cart GitHub Repository"
                target="_blank"
                class="px-3 py-2 rounded-md border border-[var(--link)] text-[var(--link)] hover:bg-[var(--link)] hover:text-[var(--bg)] transition"
              >
                <i class="bi bi-github"></i>
              </a>
            </div>
          </div>

          <!-- Frontend Card 2-->

          <div
            class="flex flex-col justify-between w-72 p-5 rounded-lg bg-[var(--bg)] hover:bg-[rgba(170,170,170,0.10)] transition"
          >
            <div>
              <h3 class="text-lg font-semibold mb-2 text-[var(--link)]">
                Calculator
              </h3>
              <div class="flex-row gap-2 mb-2">
                <Image
                  src={JavascriptLogo}
                  alt="JavaScript Logo"
                  title={"JavaScript"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={HTMLLogo}
                  alt="HTML Logo"
                  title={"HTML"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={CSSLogo}
                  alt="CSS Logo"
                  title={"CSS"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
              </div>
              <p class="text-sm mb-2 opacity-50">
                Created a simple calculator using
                <span class="font-large">JavaScript</span> and <span
                  class="font-large">HTML</span
                >. The app allows users to perform basic arithmetic operations
                with a user-friendly interface. It demonstrates my ability to
                build interactive web applications and implement core
                functionalities using JavaScript.
              </p>
            </div>
            <div class="flex gap-2 mt-4">
              <a
                href="https://calculatorappjg.netlify.app/"
                target="_blank"
                class="flex-1 text-center px-3 py-2 rounded-md border text-[var(--text)] hover:opacity-80 transition hover:bg-[var(--link)]"
                >Live Demo</a
              >
              <a
                href="https://github.com/JGrineau/Calculator-App"
                aria-label="Calculator GitHub Repository"
                target="_blank"
                class="px-3 py-2 rounded-md border border-[var(--link)] text-[var(--link)] hover:bg-[var(--link)] hover:text-[var(--bg)] transition"
              >
                <i class="bi bi-github"></i>
              </a>
            </div>
          </div>

          <!-- Frontend Card 3-->

          <div
            class="flex flex-col justify-between w-72 p-5 rounded-lg bg-[var(--bg)] hover:bg-[rgba(170,170,170,0.10)] transition"
          >
            <div>
              <h3 class="text-lg font-semibold mb-2 text-[var(--link)]">
                Vigenère Cipher
              </h3>
              <div class="flex-row gap-2 mb-2">
                <Image
                  src={ReactLogo}
                  alt="React Logo"
                  title={"React"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={JavascriptLogo}
                  alt="JavaScript Logo"
                  title={"JavaScript"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
                <Image
                  src={CSSLogo}
                  alt="CSS Logo"
                  title={"CSS"}
                  loading="lazy"
                  class="w-8 h-8 inline-block mr-2"
                />
              </div>
              <p class="text-sm mb-2 opacity-50">
                Created a Vigenère Cipher tool using
                <span class="font-large">React</span> and <span
                  class="font-large">JavaScript</span
                >. The app allows users to encrypt and decrypt messages using
                the Vigenère cipher technique, providing a simple and
                interactive interface for secure communication.
              </p>
            </div>
            <div class="flex gap-2 mt-4">
              <a
                href="https://vigenerecipherapp.netlify.app/"
                target="_blank"
                class="flex-1 text-center px-3 py-2 rounded-md border text-[var(--text)] hover:opacity-80 transition hover:bg-[var(--link)]"
                >Live Demo</a
              >
              <a
                href="https://github.com/JGrineau/vigenere-cipher"
                aria-label="Vigenère Cipher GitHub Repository"
                target="_blank"
                class="px-3 py-2 rounded-md border border-[var(--link)] text-[var(--link)] hover:bg-[var(--link)] hover:text-[var(--bg)] transition"
              >
                <i class="bi bi-github"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div></Layout
>
